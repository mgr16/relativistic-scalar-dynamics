{
  "mesh": {
    "R": 30.0,
    "lc": 1.5,
    "mesh_type": "gmsh"
  },
  "solver": {
    "degree": 1,
    "cfl": 0.3,
    "potential_type": "quadratic",
    "potential_params": {
      "m_squared": 1.0
    },
    "ko_eps": 0.0
  },
  "metric": {
    "type": "flat",
    "M": 1.0
  },
  "initial_conditions": {
    "type": "gaussian",
    "A": 0.01,
    "r0": 10.0,
    "w": 3.0,
    "v0": 1.0
  },
  "evolution": {
    "t_end": 50.0,
    "output_every": 10,
    "verbose": true
  },
  "output": {
    "dir": "results",
    "qnm_analysis": true
  }
}